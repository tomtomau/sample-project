DirectoryIndex router.php
Options -Indexes
RewriteEngine On
RewriteCond %{REQUEST_URI} !^/[a-zA-Z_-]+/router.php$
RewriteCond %{REQUEST_URI} !^/[a-zA-Z_-]+/img/[a-zA-Z_-]+.(jpg|jpeg|gif|png)$
RewriteCond %{REQUEST_URI} !^/[a-zA-Z_-]+/fonts/[a-zA-Z-]+.(eot|svg|ttf|woff)$
RewriteCond %{REQUEST_URI} !^/[a-zA-Z_-]+/router.php/
RewriteCond %{REQUEST_URI} !^/[a-zA-Z_-]+/clean_cache.php$
RewriteCond %{REQUEST_FILENAME} !^(.*).(css|min.css|js|min.js|csv|json|zip|7z)$
RewriteRule ^(.*)$ router.php/$1?%{QUERY_STRING} [L]